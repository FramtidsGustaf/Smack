<div class="container position-absolute top-50 start-0">
  <h2 class="d-inline"><%= user.username %></h2>
 
  <%if(user.isOnline) {%>
    <div class="text-online h-25 w-25 d-inline ml-2">ONLINE</div>
  <%}%>
  
  <table class="table table-hover">
      <tr class="table-secondary">
        <th scope="row">First Name:</th>
        <td><%= user.first_name %></td>
      </tr>
      <tr>
        <th scope="row">Last Name:</th>
        <td><%= user.last_name %></td>
      </tr>
      <tr class="table-secondary">
        <th scope="row">Email:</th>
        <td><%= user.email %></td>
      </tr>
    </tbody>
  </table>
</div>
<img src="<%=user.profilepic%>" alt="profilepic" class="w-25 position-absolute end-0">
<script src="/scripts/UserStatus.js"></script>
<script src="/scripts/setToOffline.js"></script>